  <button class="btn btn-secondary" {{action 'delete' post}}>Delete Post</button>
  <button class="btn btn-secondary" data-toggle="modal" data-target=".update-post-modal-lg">Update Post</button>

  <!-- Modal -->

  <div class="modal fade update-post-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Update Post</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="post">
          <div class="modal-body">
            <div class="form-group row">
              <label for="title" class="col-2 col-form-label">Title:</label>
              <div class="col-10">
                {{input class="form-control" type="text" value=title placeholder=post.title}}
              </div>
            </div>
            <div class="form-group row">
              <label for="date" class="col-2 col-form-label">Date:</label>
              <div class="col-10">
                {{input class="form-control" type="date" value=date placeholder=post.date}}
              </div>
            </div>
            <div class="form-group row">
              <label for="category" class="col-2 col-form-label">Category: </label>
              <div class="col-10">
                {{input class="form-control" type="text" value=category placeholder=post.category}}
              </div>
            </div>
            <div class="form-group row">
              <label for="image" class="col-2 col-form-label">Image URL: </label>
              <div class="col-10">
                {{input class="form-control" type="text" value=image placeholder=post.image}}
              </div>
            </div>
            <div class="form-group row">
              <label for="content" class="col-2 col-form-label">Content </label>
              <div class="col-10">
                {{textarea type="text" placeholder="Comment" value=content class="form-control" rows="20"
                      enter="commentSave" placeholder=post.content}}
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button {{action 'update' post}} class="btn btn-primary" data-dismiss="modal">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
