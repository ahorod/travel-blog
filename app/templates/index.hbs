<div class="container">

  <div class="row">

      <div class="col-sm-8 blog-main">
        {{#each model as |post|}}
          <div class="blog-post">
            <div class="post-title">{{post.title}}</div>
            <p class="blog-post-meta">{{post.date}}</p>
            <img src="{{post.image}}" style="width: 80%" alt="{{post.title}}"/>
            <br>
            {{#link-to 'post' post.id}}Read More{{/link-to}}
          </div>
        {{/each}}
      </div>
